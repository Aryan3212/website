---
type Contact = { label: string; value: string; href?: string }

const contacts: Contact[] = [
	{ label: 'Email', value: 'rahman.aryan07@gmail.com' },
	{ label: 'GitHub', value: 'github.com/aryan3212', href: 'https://github.com/aryan3212' },
	{
		label: 'LinkedIn',
		value: 'linkedin.com/in/aryanrahman3212',
		href: 'https://www.linkedin.com/in/aryanrahman3212/'
	},
	{ label: 'X', value: 'x.com/aryantwitting', href: 'https://x.com/aryantwitting' }
]
---

<div class='flex flex-col gap-2 text-sm'>
	{
		contacts.map((contact) => (
			<div class='flex items-start justify-between gap-3'>
				<div class='text-neutral-600 dark:text-neutral-300'>{contact.label}</div>
				<div class='min-w-0 text-right font-mono'>
					{contact.href ? (
						<a
							class='break-all text-opacity-80 hover:text-opacity-100 underline underline-offset-4'
							href={contact.href}
							target='_blank'
							rel='noopener noreferrer'
						>
							{contact.value}
						</a>
					) : (
						<span class='break-all text-opacity-80'>{contact.value}</span>
					)}
				</div>
			</div>
		))
	}
</div>
